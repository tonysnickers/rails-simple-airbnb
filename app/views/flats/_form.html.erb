<%= simple_form_for(flat) do |f| %>
  <%= f.label :name, required: true%>
  <%= f.text_field :name,  required: true %>
  <%= f.label :address, required: true %>
  <%= f.input :address,
  input_html: {data: {address_autocomplete_target: "address"}},
  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.label :description, required: true %>
  <%= f.text_field :description, required: true %>
  <%= f.label :price_per_night, required: true %>
  <%= f.number_field :price_per_night, required: true %>
  <%= f.label :number_of_guests, required: true %>
  <%= f.number_field :number_of_guests, required: true %>

  <%= f.input :picture_url, as: :file  %>
  <%= f.submit %>

<% end %>
